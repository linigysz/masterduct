<IfModule mod_rewrite.c>
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ------------------------------------
# INVALID URL → REDIRECT TO /404 (URL CHANGE)
# ------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/404/?$ [NC]
RewriteRule ^(.*)$ /404 [L,R=302]

</IfModule>




# Custom Error Pages
ErrorDocument 404 /404
ErrorDocument 500 /500.html

# Disable directory browsing
Options -Indexes

# Security — protect htaccess itself
<Files ".htaccess">
    Require all denied
</Files>

# Block common malicious bots (example)
<IfModule mod_setenvif.c>
    SetEnvIfNoCase User-Agent "BadBot|EvilScraper" bad_bot
    <Limit GET POST>
       Order Allow,Deny
       Allow from all
       Deny from env=bad_bot
    </Limit>
</IfModule>
